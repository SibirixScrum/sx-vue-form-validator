{
    "compilerOptions": {
        "target": "es2018",
        "module": "ES2015",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
}
